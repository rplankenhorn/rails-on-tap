<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/pour_item_background"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/pour_thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:background="@drawable/thumbnail_background"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Pour photo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/pour_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bob Smith"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/pour_beverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IPA"
            android:textSize="11sp"
            android:textColor="#757575"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/pour_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="16 oz"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FF6F00" />

            <TextView
                android:id="@+id/pour_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2m ago"
                android:textSize="9sp"
                android:textColor="#9E9E9E" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
