# Rails on Tap Environment Variables
# Copy this file to .env and fill in your actual values

# API Key for client authentication
# Generate a new key in Rails console with:
# device = Device.create!(name: "Android App")
# api_key = ApiKey.create!(device: device, description: "Android client")
# puts api_key.key
RAILS_API_KEY=your_api_key_here

# API Base URL
# For Android emulator: http://10.0.2.2:3000
# For physical device: http://YOUR_LOCAL_IP:3000 (e.g., http://192.168.1.100:3000)
# For production: https://your-domain.com
RAILS_API_BASE_URL=http://10.0.2.2:3000

# Skip seed data on database setup (set to "true" to start with clean slate)
# Useful for testing or when you want to create your own data
SKIP_SEED_DATA=false
